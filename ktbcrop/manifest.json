{
  "manifest_version": 3,
  "name": "KTB Crop Image",
  "version": "1.3",
  "description": "Crop any image from webpage using drag & select",
  "permissions": [
    "downloads",
    "activeTab",
    "scripting",
    "tabs",
    "storage" 
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "commands": {
    "crop-image": {
      "suggested_key": {
        "default": "Ctrl+Shift+Z"
      },
      "description": "Start crop image"
    }
  }
}